@{
    ViewBag.Title = "Register";
}
<div class="wrapper col3">
    <div id="container">
        <h1>Use the options below to pay for the Corinne 5K registration with your PayPal account or download the registration form</h1>
        <table>
            <tr>
                <td>
                    <form target="paypal" action="https://www.paypal.com/cgi-bin/webscr" method="post" style="margin-left:25%">
                        <input type="hidden" name="cmd" value="_s-xclick">
                        <input type="hidden" name="hosted_button_id" value="93VR9H4YTE7TE">
                        <table>
                            <tr><td><input type="hidden" name="on0" value="Registration Type">Pay here with PayPal</td></tr>
                            <tr>
                                <td>
                                    <select name="os0">
                                        <option value="Youth Small">Youth Small $5.00 USD</option>
                                        <option value="Youth Medium">Youth Medium $5.00 USD</option>
                                        <option value="Youth Large">Youth Large $5.00 USD</option>
                                        <option value="Adult Small">Adult Small $10.00 USD</option>
                                        <option value="Adult Medium">Adult Medium $10.00 USD</option>
                                        <option value="Adult Large">Adult Large $10.00 USD</option>
                                        <option value="Adult Extra Large">Adult Extra Large $10.00 USD</option>
                                    </select>
                                </td>
                            </tr>
                        </table>
                        <input type="hidden" name="currency_code" value="USD">
                        <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_cart_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
                        <img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
                    </form>
                </td>
                <td>
                    <ul>
                        <li><a href="/IndActivities/ShowRegForm"><img src="/Images/5klogo.jpg" alt="" /></a></li>
                    </ul>
                </td>
            </tr>
        </table>
    </div>
</div>


