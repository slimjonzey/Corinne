@model List<CorinneCity.Controllers.FormattedDateTimes>
@{
    ViewBag.Title = "Welcome to Corinne City";
}
@section featured {
    <div class="wrapper col1" >
        <div id="header">
            <h1>@ViewBag.Title</h1>
            <h2>@ViewBag.Message</h2>
        </div>
    </div>
}
<div class="wrapper col2">
    <div id="intro">
        <div class="fl_left">
            <h1>Upcoming Events</h1>
            <div class="marquee-with-options">
                @foreach (var item in Model)
                {
                    <a style="margin-bottom:10px;" href="@Url.Content("~/Home/Calendar")">
                        @item.EventTitle <br />
                        @item.EventDate <br />
                        <div>@item.EventStart - @item.EventEnd</div>
                        @item.EventLocation
                    </a><br />
                    <br />
                    <br />
                }
            </div>
        </div>
        <div class="fl_right">
            <ul id="rotation">
