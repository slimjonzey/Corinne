        $(document).ready(function () {
            $('#calendar').fullCalendar({
                header: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'month,agendaWeek,agendaDay'
                },
                defaultView: 'month',
                weekends: 'false',
                events: @Model,
                editable: false,
                eventTextColor: '#FFFFFF',
                eventBackgroundColor: '#585C3F',
                eventBorderColor: '#585C3F',
                eventRender: function(event, element) {
                    element.attr('title', event.title + ' ' + event.starttime + ' - ' + event.endtime + ' ' + event.location);
                    element.css('cursor', 'pointer');
                }
            });
        });
    </script>



















