@model Dictionary<string, List<CorinneCity.Models.Minute>>
@{
    ViewBag.Title = "Planning & Zoning Minutes";
}

<script src="@Url.Content("~/Scripts/jquery-1.7.1.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.20.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Minutes.js")" type="text/javascript"></script>

<body onload="appendMinutes('@Model.Values.Last().Last().FileContent')">
</body>
<div class="wrapper col3">
    <div id="container">
        <h1>@ViewBag.Title</h1>
        <table class="minutes" id="itemList">
            <tr>
                <td class="sideNav">
                    @foreach (var item in Model)
                    {
                        <ul id="treeview">
	                        <li>
		                        <a>&#9658 @item.Key</a>
		                        @Html.Partial("MinutesTree", item.Value)
	                        </li>
                        </ul>
                    }
                </td>
	            <td class="showMinutes" id="showMinutes" style="width:90%"/>
            </tr>
        </table>
    </div>
</div>

